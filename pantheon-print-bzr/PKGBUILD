# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=pantheon-print-bzr
pkgver=7
pkgrel=1
pkgdesc="A small utility used to print documents that allows the user to set the preferences."
arch=('i686' 'x86_64')
url="https://launchpad.net/pantheon-print"
license=('GPL3')
groups=('pantheon')
depends=('contractor-bzr' 'gtk3')
makedepends=('bzr' 'vala' 'cmake')
conflicts=('pantheon-print')

_bzrtrunk=lp:pantheon-print
_bzrmod=pantheon-print

build() {
	msg "Connecting to Bazaar server...."

	if [ -d $_bzrmod ]; then
		cd $_bzrmod && bzr pull $_bzrtrunk -r $pkgver && cd ..
		msg "The local files are updated."
	else
		bzr branch $_bzrtrunk $_bzrmod -r $pkgver
	fi

	msg "BZR checkout done or server timeout"
	msg "Starting make..."

	cd ${_bzrmod}
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "${srcdir}/${_bzrmod}/"
	make DESTDIR="${pkgdir}" install
}
