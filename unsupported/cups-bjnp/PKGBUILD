# Contributor: royrocks <royrocks13@gmail.com>

pkgname=cups-bjnp
pkgver=1.2.2
pkgrel=1
pkgdesc='CUPS back-end for the canon printers using the proprietary USB over IP BJNP protocol'
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/cups-bjnp/'
license=('GPL')
depends=('libcups')
makedepends=('cups')
source=("http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('35db05f0a93d969d58f6969e15be9039eadab9c663a895daaf3a22a743dd6069')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix='/usr'
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install
}

